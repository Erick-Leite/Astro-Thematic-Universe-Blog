---
import { type CollectionEntry, getCollection } from "astro:content";
import BlogPost from "../../layouts/BlogPost.astro";
import { render } from "astro:content";
import { authorsData } from "../../data/authorsData";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;

// Assegurar que os nomes dos autores listados no post realmente existam na lista de dados dos autores
post.data.authorsNames.forEach((authorName) => {
  const authorExists = authorsData.some(({ name }) => name === authorName);

  if (!authorExists) {
    throw new Error(
      `Autor '${authorName}' n√£o encontrado em 'data/authorsData.ts'.`
    );
  }
});

const { Content } = await render(post);
---

<BlogPost {...post.data}>
  <Content />
</BlogPost>
