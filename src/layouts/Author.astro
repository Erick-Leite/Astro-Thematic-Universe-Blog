---
import type { CollectionEntry } from "astro:content";
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import { Image } from "astro:assets";
import Footer from "@components/Footer.astro";

type Props = CollectionEntry<"authors">["data"];

const { name, avatar, bio } = Astro.props;
---

<html lang="pt-BR">
  <head>
    <BaseHead title={`Perfil de ${name}`} description={bio} />
  </head>

  <body>
    <Header />

    <main>
      <div class="flex flex-col items-center gap-4 grayscale-100">
        <Image src={avatar} alt={name} height={200} width={200} />
        <h1 class="text-center">{name}</h1>
        <div class="text-center"><slot /></div>
      </div>

      <Footer />
    </main>
  </body>
</html>
